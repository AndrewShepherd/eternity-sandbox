<Window x:Class="Eternity.Server.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eternity.Server.WpfApp"
        mc:Ignorable="d"
        Title="Eternity Server" Height="450" Width="800"
	>
	<Window.Resources>
		<local:MainWindowViewModel x:Key="MainWindowViewModel" />
	</Window.Resources>
    <Grid DataContext="{StaticResource MainWindowViewModel}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<ListView Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Connections}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock>Connection Item</TextBlock>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    </Grid>
</Window>
